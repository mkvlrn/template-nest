{
  "name": "template-nest",
  "description": "A revamped/modernized template for NestJS projects using esm",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "author": "Mike Valeriano <mkvlrn@proton.me>",
  "repository": {
    "type": "git",
    "url": "git@github.com:mkvlrn/template-nest"
  },
  "keywords": ["nestjs", "esm", "template"],
  "scripts": {
    "build": "nest build",
    "postbuild": "tsc-alias -f -p tsconfig.build.json",
    "dev": "yarn build && yarn start --watch",
    "start": "node build/main.js",
    "test:ci": "yarn test --run --bail=1 --reporter=default && yarn test:e2e --run --bail=1 --reporter=default",
    "test": "vitest",
    "test:e2e": "vitest --config e2e/vitest.config.ts",
    "tidy:ci": "biome check --no-errors-on-unmatched",
    "tidy": "yarn tidy:ci --fix",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/core": "^1.10.8",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^3.0.2",
    "husky": "^9.1.7",
    "supertest": "^7.0.0",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.7.3",
    "unplugin-swc": "^1.5.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.2"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  }
}
