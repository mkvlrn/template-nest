{
  "name": "template-nest",
  "description": "A revamped/modernized template for NestJS projects using esm",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "author": "Mike Valeriano <mkvlrn@proton.me>",
  "repository": {
    "type": "git",
    "url": "git@github.com:mkvlrn/template-nest"
  },
  "keywords": [
    "nestjs",
    "esm",
    "template"
  ],
  "engines": {
    "node": ">=23.6"
  },
  "imports": {
    "#*": {
      "dev": "./src/*.ts",
      "default": "./build/*.js"
    }
  },
  "scripts": {
    "build": "node scripts/build.ts",
    "dev": "node -C dev --import tsx --watch src/main.ts",
    "start": "node build/main.js",
    "test": "node -C dev --import tsx --test 'src/**/*.test.ts'",
    "test-e2e": "node -C dev --import tsx --test 'src/**/*.spec.ts'",
    "biome-check": "biome check --no-errors-on-unmatched",
    "biome-fix": "yarn biome-check --write",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@mkvlrn/config": "^2.0.3",
    "@nestjs/testing": "^11.0.13",
    "@types/express": "^5.0.1",
    "@types/node": "^22.14.0",
    "@types/supertest": "^6.0.3",
    "husky": "^9.1.7",
    "supertest": "^7.1.0",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@biomejs/biome": "https://pkg.pr.new/biomejs/biome/@biomejs/biome@19ecf30",
    "@mkvlrn/result": "^1.1.0",
    "@nestjs/common": "^11.0.13",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.13",
    "@nestjs/platform-express": "^11.0.13",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "zod": "^3.24.2"
  }
}
