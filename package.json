{
  "name": "template-nest",
  "description": "A revamped/modernized template for NestJS projects using esm",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "author": "Mike Valeriano <mkvlrn@proton.me>",
  "repository": {
    "type": "git",
    "url": "git@github.com:mkvlrn/template-nest"
  },
  "keywords": ["nestjs", "esm", "template"],
  "scripts": {
    "swc": "node --import @swc-node/register/esm-register",
    "build": "nest build",
    "dev": "npm run swc -- --watch src/main.ts",
    "start": "node build/main.js",
    "test": "npm run swc -- scripts/test.ts",
    "test:cov": "npm run swc -- scripts/test.ts --coverage",
    "tidy": "npm run swc -- scripts/tidy.ts",
    "typecheck": "npx tsc --noEmit",
    "prepare": "npx husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.15",
    "@swc-node/register": "^1.10.9",
    "@swc/cli": "^0.5.2",
    "@swc/core": "^1.10.4",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^2.1.8",
    "husky": "^9.1.7",
    "supertest": "^7.0.0",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.7.2",
    "vite-plugin-swc-transform": "^1.0.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.15",
    "@nestjs/core": "^10.4.15",
    "@nestjs/platform-express": "^10.4.15",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  }
}
