{
  "name": "template-nest",
  "description": "A revamped/modernized template for NestJS projects using esm",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "author": "Mike Valeriano <mkvlrn@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:mkvlrn/template-nest"
  },
  "keywords": [
    "nestjs",
    "esm",
    "template"
  ],
  "engines": {
    "node": "25"
  },
  "imports": {
    "#/*": "./src/*.ts"
  },
  "scripts": {
    "dev": "node --import tsx --watch src/main.ts",
    "start": "node --import tsx src/main.ts",
    "test": "vitest",
    "test-staged": "vitest related --bail=1 --reporter=github-actions",
    "test-ci": "vitest --bail=1 --reporter=github-actions",
    "biome-check": "biome check --diagnostic-level=warn --no-errors-on-unmatched",
    "biome-fix": "pnpm biome-check --write",
    "typecheck": "tsc-files",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@mkvlrn/config": "^3.1.0",
    "@nestjs/testing": "^11.1.13",
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.3",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.18",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "supertest": "^7.2.2",
    "tsc-files": "^1.1.4",
    "typescript": "6.0.0-beta",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@mkvlrn/result": "^5.0.7",
    "@nestjs/common": "^11.1.13",
    "@nestjs/core": "^11.1.13",
    "@nestjs/platform-express": "^11.1.13",
    "http-status-codes": "^2.3.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "tsx": "^4.21.0"
  }
}
