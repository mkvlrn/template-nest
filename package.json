{
  "name": "template-nest",
  "description": "A revamped/modernized template for NestJS projects using esm",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "author": "Mike Valeriano <mkvlrn@proton.me>",
  "repository": {
    "type": "git",
    "url": "git@github.com:mkvlrn/template-nest"
  },
  "keywords": [
    "nestjs",
    "esm",
    "template"
  ],
  "engines": {
    "node": "24.x"
  },
  "scripts": {
    "build": "vite build",
    "dev": "APP_ENV=development varlock run -- tsx --watch src/main.ts",
    "start": "APP_ENV=production varlock run -- node build/main.js",
    "test": "vitest",
    "test-e2e": "vitest --config ./e2e/vite.config.ts",
    "biome-check": "biome check --no-errors-on-unmatched",
    "biome-fix": "npm run biome-check --write",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@mkvlrn/config": "^2.0.15",
    "@nestjs/testing": "^11.1.6",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "rollup-plugin-node-externals": "^8.1.0",
    "supertest": "^7.1.4",
    "tsc-files": "^1.1.4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@mkvlrn/result": "^4.0.13",
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "varlock": "^0.0.11",
    "zod": "^4.1.5"
  }
}
