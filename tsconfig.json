{
  "extends": "@mkvlrn/config/tsconfig-node",
  "compilerOptions": {
    // type checking only
    "noEmit": true,

    // nest uses these weird ass experimental decorators
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "paths": {
      "~/*": ["./src/*"]
    }
  },

  "exclude": ["node_modules", "build", "coverage", "dist"]
}
